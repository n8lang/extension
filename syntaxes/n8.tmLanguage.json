{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "N8",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#digits" },
		{ "include": "#comments" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.n8",
				"match": "\\b(break|catch|continue|delete|else|enum|false|func|halt|handle|if|lock|loop|maybe|nil|parallel|random|render|ret|size|test|then|throw|true|type|unless|use|val|wait|when|while)\\b"
			}]
		},
		"digits": {
			"patterns": [{
				"name": "digit.numberic.n8",
				"match": "\\b(0b[01]+|0t[0-2]+|0c[0-7]+|0x[0-9a-fA-F]+|\\d+(\\.\\d*)?)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.n8",
				"begin": "#",
				"beginCaptures": {
				  	"0": {
						"name": "punctuation.definition.comment.n8"
					}
				},
				"end": "$"
			}]
		},
		"strings": {
			"name": "string.quoted.double.n8",
			"begin": "\"",
			"end": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.n8"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.n8"
				}
			},
			"patterns": [
				{
					"name": "constant.character.escape.n8",
					"match": "\\\\[btnfr\"\\\\]"
				}
			]
		}
	},
	"fileTypes": ["n8"],
	"scopeName": "source.n8"
}